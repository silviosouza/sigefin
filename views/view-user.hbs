              id="userApagar"
                  class="btn btn-light btn-small"
                  data-bs-toggle="modal"
                  data-bs-target="#confirmModal"
                  data-rota="/deluser/{{this.id}}"
                  data-nome="{{this.name}}"
                ><i class="bi bi-person-x"></i> Apagar</button>
              </td>
          </tr>
        </tbody>
      </table>
    </div>

{{/each}}
</div>

<script>
  document.getElementById("userApagar").addEventListener('click', () => {
    const userDeletar = document.getElementById("userApagar");
    let btn_onclickConfirm = document.getElementById("btn-onclickConfirm");
    btn_onclickConfirm.attributes['onclick'].value = "window.location = document.querySelector('#userApagar').dataset.rota";
    console.log(btn_onclickConfirm.attributes['onclick'].value);
    abreModal('confirmModalLabel','confirmModalBody','Apagar Usuário', `Confirma deletar
          ${userDeletar.dataset.nome} ?`,'OK','confirmModal')
  })
</script>